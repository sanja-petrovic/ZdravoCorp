<Window x:Class="ZdravoKlinika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoKlinika"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="0,0,0,-133">
        <Button Content="Lekar" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" Height="57" Width="224" Click="Doctor_Click" FontSize="20"/>
        <Button Content="Pacijent" HorizontalAlignment="Center" Margin="0,203,0,0" VerticalAlignment="Top" Height="57" Width="224" FontSize="20"/>
        <Button Content="Upravnik" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" Height="57" Width="224" FontSize="20"/>
        <Button x:Name="button" Content="Sekretar" HorizontalAlignment="Center" Margin="0,411,0,0" VerticalAlignment="Top" Height="57" Width="224" FontSize="20" FontWeight="Normal" Effect="{Binding BorderThickness, ElementName=button}">
            <Button.Style>
                <Style/>
            </Button.Style>
        </Button>

    </Grid>
</Window>
