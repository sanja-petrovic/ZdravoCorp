<Page x:Class="ZdravoKlinika.View.PatientPages.PatientProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZdravoKlinika.ViewModel" d:DataContext="{d:DesignInstance Type=local:PatientProfileViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientProfile">
    <ScrollViewer>
        <Grid>
            <Label x:Name="title" Content="{Binding Path=FullName}" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.434,-0.058"/>
            <Label Content="Osnovni Podaci" HorizontalAlignment="Left" Margin="70,70,0,0" VerticalAlignment="Top"/>

            <Image HorizontalAlignment="Left" Height="129" Margin="70,101,0,0" VerticalAlignment="Top" Width="118"/>
            <ItemsControl Margin="577,101,50,-28" BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Path = NotificationTexts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="DarkSlateGray" BorderThickness="1">
                        <Grid>
                            

                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding}" Grid.Row="0"/>
                            <Button Content="Obrisi" Grid.Row="1" Width="75" HorizontalAlignment="Right"></Button>
                            
                        </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
            <ListBox HorizontalAlignment="Left" Height="127" Margin="70,441,0,0" VerticalAlignment="Top" Width="215" ItemsSource="{Binding Diagnoses }"/>
            <ListBox HorizontalAlignment="Left" Height="127" Margin="318,441,0,0" VerticalAlignment="Top" Width="215" ItemsSource="{Binding Alergies}"/>
            <Label Content="Alergeni" HorizontalAlignment="Left" Margin="318,400,0,0" VerticalAlignment="Top"/>
            <Label Content="Istorija bolesti" HorizontalAlignment="Left" Margin="70,400,0,0" VerticalAlignment="Top"/>
            <Label Content="Obavestenja" HorizontalAlignment="Left" Margin="577,70,0,0" VerticalAlignment="Top"/>

            <ScrollViewer HorizontalAlignment="Left" Height="294" Margin="190,101,0,0" VerticalAlignment="Top" Width="343">
                <Grid>
                    <Label Content="Ime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                    <Label Content="Prezime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                    <Label Content="Datum rodjenja" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
                    <Label Content="Pol" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0"/>
                    <Label Content="Krvna grupa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,134,0,0"/>
                    <Label Content="Zanimanje" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,163,0,0"/>
                    <Label Content="Kontakt za hitne slucajve" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,194,0,0"/>
                    <Label Content="Broj za hitne slucajeve" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,225,0,0"/>
                    <Label Content="E-mail" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0"/>
                    <Label Content="Broj telefona" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,281,0,0"/>


                    <Label x:Name="labelName" Content="{Binding Name}" HorizontalAlignment="Left" Margin="163,13,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelLastName" Content="{Binding LastName}" HorizontalAlignment="Left" Margin="163,49,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelDate" Content="{Binding DateOfBirth}" HorizontalAlignment="Left" Margin="163,80,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelGender" Content="{Binding Gender}" HorizontalAlignment="Left" Margin="163,110,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelBlood" Content="{Binding BloodType}" HorizontalAlignment="Left" Margin="163,142,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelOcupation" Content="{Binding Ocupation}" HorizontalAlignment="Left" Margin="163,171,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelEmergancyContact" Content="{Binding EmergacyContact}" HorizontalAlignment="Left" Margin="163,202,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelEmergancy" Content="{Binding EmergencyNumber}" HorizontalAlignment="Left" Margin="163,233,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelPhoneNumber" Content="{Binding PhoneNumber}" HorizontalAlignment="Left" Margin="163,289,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="labelEmail" Content="{Binding Email}" HorizontalAlignment="Left" Margin="163,258,0,0" VerticalAlignment="Top"/>
                </Grid>
            </ScrollViewer>
            <Rectangle HorizontalAlignment="Left" Height="294" Margin="70,101,0,0" Stroke="Black" VerticalAlignment="Top" Width="463"/>

        </Grid>
    </ScrollViewer>
</Page>
