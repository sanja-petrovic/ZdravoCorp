<Page x:Class="ZdravoKlinika.View.PatientPages.PatientAppointmentReviewView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModel="clr-namespace:ZdravoKlinika.View.PatientPages.ViewModel" d:DataContext="{d:DesignInstance Type=viewModel:PatientAppointmentReviewViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="778"
      Title="PatientAppReviewView">
    <Page.DataContext>
        <viewModel:PatientAppointmentReviewViewModel></viewModel:PatientAppointmentReviewViewModel>
    </Page.DataContext>
    <Grid>
        <Label Content="Komentar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <DataGrid Margin="10,51,10,10" Name="questionsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding QuestionsAndGroups }">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pitanje" Binding="{Binding Content}" Width="4*" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTemplateColumn Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="1"/>
                                    <TextBlock Text="2"/>
                                    <TextBlock Text="3"/>
                                    <TextBlock Text="4"/>
                                    <TextBlock Text="5"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" >
                                    <RadioButton GroupName="{Binding RadioGroup}" Name="_1"/>
                                    <RadioButton GroupName="{Binding RadioGroup}" Name="_2"/>
                                    <RadioButton GroupName="{Binding RadioGroup}" Name="_3"/>
                                    <RadioButton GroupName="{Binding RadioGroup}" Name="_4"/>
                                    <RadioButton GroupName="{Binding RadioGroup}" Name="_5"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
