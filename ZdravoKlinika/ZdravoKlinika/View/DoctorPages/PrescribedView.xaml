        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Rp." VerticalAlignment="Top" FontWeight="Bold" FontSize="40" Margin="38,333,0,0" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Prescription.Medication}" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Margin="128,333,0,0" Height="75" Width="277"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Usage}" VerticalAlignment="Top" FontWeight="Regular" FontSize="18" Foreground="#FF5F5F5F" Margin="129,400,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="253" Margin="116,333,0,0" Stroke="Black" Fill="Black" VerticalAlignment="Top" Width="2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Potpis farmaceuta" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Margin="266,644,0,0"/>
    </Grid>
</Window>
